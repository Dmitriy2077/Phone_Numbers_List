<resources>
    <!-- Base application theme. -->
    <style name="Theme.App" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_p</item>
        <item name="colorPrimaryDark">@color/blue_p_d</item>
        <item name="colorAccent">@color/yellow_s_d</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:itemBackground">@color/blue_p_d</item>
        <item name="font">@font/pt_serif</item>
    </style>

    <style name="ToolbarWithArrow" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="colorSurface">@color/blue_p_d</item>
    </style>

    <style name="LoginEditText" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="CardViewItem" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:background">@color/item_background</item>
        <item name="cardCornerRadius">10dp</item>
        <item name="cardElevation">2dp</item>
        <item name="strokeColor">@color/blue_p_l</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="CardViewItemInfo" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:background">@color/item_background</item>
        <item name="cardCornerRadius">2dp</item>
        <item name="cardElevation">1dp</item>
        <item name="strokeColor">@color/blue_p_l</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:layout_marginEnd">4dp</item>
        <item name="android:layout_marginTop">4dp</item>
    </style>
</resources>
